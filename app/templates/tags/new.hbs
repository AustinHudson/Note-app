
<div class="form-horizontal">
    <div class="form-group has-feedback {{if model.isValid 'has-success'}}">
        <label class="col-sm-2 control-label">Add New Tag:</label>
        <div class="col-sm-10">
          {{input type="text" value=model.name class="form-control" placeholder="Tag Name"}}
          {{#if model.isValid}}<span class="glyphicon glyphicon-ok form-control-feedback"></span>{{/if}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" disabled={{unless model.isValid true}} class="btn btn-default" {{action 'saveTag' model}} >Save</button>
        </div>
    </div>
</div>

{{outlet}}